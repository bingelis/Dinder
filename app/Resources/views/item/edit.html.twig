{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <h2 class="title">Edit Item</h2>

                <div class="alert alert-warning">All sent and received offers will be deleted after edit.</div>

                {{ form_start(edit_form, {'attr': {'class': 'submit-form'}}) }}
                {{ form_rest(edit_form) }}
                <button class="btn btn-default">Submit</button>
                <input class="btn btn-primary pull-right" form="delete-form" type="submit" value="Delete">
                {{ form_end(edit_form) }}

                {{ form_start(delete_form, {'attr': {'id': 'delete-form'}}) }}
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
