{% extends 'base.html.twig' %}

{% block title %}Dinder - {{ 'item.new.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <h2 class="title">{{ 'item.new.title'|trans }}</h2>

                <div class="alert alert-info">
                    {{ 'item.new.message'|trans|raw }}
                </div>

                {{ form_start(form, {'attr': {'class': 'submit-form'}}) }}

                    {{ form_row(form.title) }}

                    <div class="form-group">
                        {{ form_label(form.value) }}

                        <div class="input-group">
                            {{ form_widget(form.value, {'attr': {'data-margin': item_match_margin}}) }}
                            <div class="input-group-addon">â‚¬</div>
                        </div>

                        {{ form_errors(form.value) }}

                        <p class="help-block">
                            This item will be traded with other items in this value range:
                            <span id="appbundle_item_value_margins"></span>
                        </p>
                    </div>

                    {{ form_rest(form) }}
                    <button class="btn btn-default">{{ 'item.button.submit'|trans }}</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
