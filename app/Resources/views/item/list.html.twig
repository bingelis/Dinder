{% if items %}
    <div class="items-slider">
        {% for item in items  %}
            {% if type == 'traded' %}
                {% include 'item/card.html.twig' with {'item': item, 'activate': true, 'edit': true, 'contacts': true} %}
            {% elseif type == 'active' %}
                {% include 'item/card.html.twig' with {'item': item, 'exchange': true, 'edit': true} %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}

<div class="alert alert-warning{% if items %} hidden{% endif %}">
    {{ 'item.index.no-items'|trans }}
</div>
