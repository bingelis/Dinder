{% extends "::base.html.twig" %}

{% block banner %}
    <div class="page-header">
        <div class="container text-center">
            <h2>{{ 'slogan'|trans }}</h2>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heading-panel">
                    <h2 class="title">{{ 'wanted.title'|trans }}</h2>
                </div>
                <div class="row">
                    {% for item in featured_items %}
                        <div class="col-xs-12 col-ms-6 col-sm-6 col-md-4 col-lg-3">
                            {% include 'item/card.html.twig' with {'item': item} %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
