{% extends 'base.html.twig' %}

{% block body %}
    <!-- =-=-=-=-=-=-= Home Tabs =-=-=-=-=-=-= -->
    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading-panel">
                        <h3 class="main-title">Matches</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-xs-12">
                            <div class="row">
                                <div class="col-xs-5">
                                    <h4 class="text-center">My item</h4>
                                </div>
                                <div class="col-xs-offset-2 col-xs-5">
                                    <h4 class="text-center">Offered item</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        {% for match in matches %}
                            <div class="col-md-6 col-md-offset-3 col-xs-12">
                                <div class="row">
                                    <hr>
                                    <div class="col-xs-5">
                                        <!-- Ad Box -->
                                        <div class="category-grid-box">
                                            <!-- Ad Img -->
                                            {% if match.itemRespondent.mainImage %}
                                                <img src="{{ vich_uploader_asset(match.itemRespondent.mainImage, 'file')}}" alt="{{ match.itemRespondent.title }}" />
                                            {% else %}
                                                <img src="{{ asset('images/default.jpg') }}" alt="no image" />
                                            {% endif %}
                                            <!-- Ad Img End -->
                                            <div class="short-description">
                                                <!-- Ad Category -->
                                                <div class="category-title"><span>{{ match.itemRespondent.category.id }} - {{ match.itemRespondent.category.title }}</span> </div>
                                                <!-- Ad Title -->
                                                <h3>{{ match.itemRespondent.id }} - {{ match.itemRespondent.title }}</h3>
                                                <p>
                                                {% for categoryToMatch in match.itemRespondent.categoriesToMatch %}
                                                    <span class="badge">
                                                        {{ categoryToMatch.id }} - {{ categoryToMatch.title }}
                                                    </span>
                                                {% endfor %}
                                                </p>
                                            </div>
                                        </div>
                                        <!-- Ad Box End -->
                                    </div>
                                    <div class="col-xs-2">
                                        <p class="heading-color text-center"><i class="fa fa-exchange" aria-hidden="true"></i> </p>
                                    </div>
                                    <div class="col-xs-5">
                                        <!-- Ad Box -->
                                        <div class="category-grid-box">
                                            <!-- Ad Img -->
                                            {% if match.itemOwner.mainImage %}
                                                <img src="{{ vich_uploader_asset(match.itemOwner.mainImage, 'file')}}" alt="{{ match.itemOwner.title }}" />
                                            {% else %}
                                                <img src="{{ asset('images/default.jpg') }}" alt="no image" />
                                            {% endif %}
                                            <!-- Ad Img End -->
                                            <div class="short-description">
                                                <!-- Ad Category -->
                                                <div class="category-title"><span>{{ match.itemOwner.category.id }} - {{ match.itemOwner.category.title }}</span> </div>
                                                <!-- Ad Title -->
                                                <h3>{{ match.itemOwner.id }} - {{ match.itemOwner.title }}</h3>
                                                <p>
                                                    {% for categoryToMatch in match.itemRespondent.categoriesToMatch %}
                                                        <span class="badge">
                                                        {{ categoryToMatch.id }} - {{ categoryToMatch.title }}
                                                    </span>
                                                    {% endfor %}
                                                </p>
                                            </div>
                                        </div>
                                        <!-- Ad Box End -->
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =-=-=-=-=-=-= Home Tabs End =-=-=-=-=-=-= -->
{% endblock %}
