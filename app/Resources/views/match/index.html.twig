                                                </div>
                                                <!-- Ad Img End -->
                                                <div class="short-description">
                                                    <!-- Ad Title -->
                                                    <h3>{{ match.itemRespondent.id }} - {{ match.itemRespondent.title }}</h3>
                                                </div>
                                            </div>
                                            <!-- Ad Box End -->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-3 col-xs-12">
                                            <a class="btn btn-theme btn-block" href="{{ path('match_remove', {id: match.id}) }}">Remove</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if sent_offers %}
