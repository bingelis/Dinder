{% extends 'base.html.twig' %}

{% block body %}
    <!-- =-=-=-=-=-=-= Home Tabs =-=-=-=-=-=-= -->
    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    {% if received_offers %}
                        <div class="heading-panel">
                            <h3 class="main-title">Received Offers</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 col-xs-12">
                                <div class="row">
                                    <div class="col-xs-5">
                                        <h4 class="text-center">My item</h4>
                                    </div>
                                    <div class="col-xs-offset-2 col-xs-5">
                                        <h4 class="text-center">Offered item</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            {% for match in received_offers %}
                                <div class="col-md-6 col-md-offset-3 col-xs-12">
                                    <div class="row">
                                        <hr>
                                        <div class="col-xs-5">
                                            <!-- Ad Box -->
                                            <div class="category-grid-box">
                                                <!-- Ad Img -->
                                                <div class="category-grid-img">
                                                    {% if match.itemRespondent.mainImage %}
                                                        <img src="{{ vich_uploader_asset(match.itemRespondent.mainImage, 'file')}}" alt="{{ match.itemRespondent.title }}" />
                                                    {% else %}
                                                        <img src="{{ asset('images/default.jpg') }}" alt="no image" />
                                                    {% endif %}
                                                    <p class="item-description">
                                                        {{ match.itemRespondent.description }}
                                                    </p>
                                                </div>
                                                <!-- Ad Img End -->
                                                <div class="short-description">
                                                    <!-- Ad Title -->
                                                    <h3>{{ match.itemRespondent.id }} - {{ match.itemRespondent.title }}</h3>
                                                </div>
                                            </div>
                                            <!-- Ad Box End -->
                                        </div>
                                        <div class="col-xs-2">
                                            <p class="heading-color text-center"><i class="fa fa-exchange" aria-hidden="true"></i> </p>
                                        </div>
                                        <div class="col-xs-5">
                                            <!-- Ad Box -->
                                            <div class="category-grid-box">
                                                <!-- Ad Img -->
                                                <div class="category-grid-img">
                                                    {% if match.itemOwner.mainImage %}
                                                        <img src="{{ vich_uploader_asset(match.itemOwner.mainImage, 'file')}}" alt="{{ match.itemOwner.title }}" />
                                                    {% else %}
                                                        <img src="{{ asset('images/default.jpg') }}" alt="no image" />
                                                    {% endif %}
                                                    <p class="item-description">
                                                        {{ match.itemOwner.description }}
                                                    </p>
                                                </div>
                                                <!-- Ad Img End -->
                                                <div class="short-description">
                                                    <!-- Ad Title -->
                                                    <h3>{{ match.itemOwner.id }} - {{ match.itemOwner.title }}</h3>
                                                </div>
                                            </div>
                                            <!-- Ad Box End -->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3 col-md-offset-3 col-xs-6">
                                            <a class="btn btn-default btn-block" href="{{ path('match_decline', {id: match.id}) }}">Decline</a>
                                        </div>
                                        <div class="col-md-3 col-xs-6">
                                            <a class="btn btn-theme btn-block" href="{{ path('match_trade', {id: match.id}) }}">Trade</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="heading-panel">
                            <h3 class="main-title">Received Offers</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-xs-12 col-sm-6">
                                <p>Sorry, you have no offers yet.</p>
                            </div>
                        </div>
                    {% endif %}

                    {% if declined_offers %}
