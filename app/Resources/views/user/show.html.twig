{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <h1 class="title">Your profile information</h1>
            <dl class="dl-horizontal">
                <dt><strong>Your name </strong></dt>
                <dd>
                    {{ user.name }}
                </dd>

                {% if not user.facebookId %}
                    <dt><strong>Username</strong></dt>
                    <dd>
                        {{ user.username }}
                    </dd>
                    <dt><strong>Email Address </strong></dt>
                    <dd>
                        {{ user.email }}
                    </dd>
                {% endif %}

                <dt><strong>Phone Number </strong></dt>
                <dd>
                    {{ user.phone }}
                </dd>
                <dt><strong>Location </strong></dt>
                <dd>
                    {% if user.location %}
                        {{ user.location.title }}
                    {% endif %}
                </dd>
                <dt><strong>Preferred locations</strong></dt>
                <dd>
                    <ul>
                        {% for locationToMatch in user.locationsToMatch %}
                            <li>{{ locationToMatch.title }}</li>
                        {% endfor %}
                    </ul>
                </dd>
            </dl>

            <a class="btn btn-default" href="{{ path('user_edit') }}">Edit Profile</a>
        </div>
    </div>
</div>
{% endblock %}
