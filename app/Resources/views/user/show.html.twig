{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ user.location.title }}</td>
            </tr>
            <tr>
                <th>Location to match</th>
                <td>
                    {% for locationToMatch in user.locationsToMatch %}
                        <li>{{ locationToMatch.title }}</li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('user_edit') }}">Edit</a>
{% endblock %}
