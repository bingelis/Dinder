{% block title %}Dinder - {{ 'user.edit.title'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-xs-12 col-sm-12">
            <h1 class="title">{{ 'user.edit.title'|trans }}</h1>
            {{ form_start(edit_form) }}
