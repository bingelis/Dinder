<header>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('homepage') }}" class="navbar-brand">
                    <img src="{{ asset('build/images/logo.png') }}" alt="Dinder">
                </a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse-2">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('easyadmin') }}">Admin</a></li>
                    {% elseif app.user %}
                        <li>
                            <a href="{{ path('item_index') }}">
                                Items
                                {% if app.user %}
                                    <span class="badge">
                                        {{ unseen_count.countUnseed(app.user) }}
                                    </span>
                                {% endif %}
                            </a>
                        </li>
                        <li><a href="{{ path('match_index') }}">Matches</a></li>
                    {% endif %}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li><a href="{{ path('user_show') }}">Profile</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Log out</a></li>
                        <li>
                            <a href="{{ path('item_new') }}" class="btn btn-circle">
                                <i class="fa fa-plus" aria-hidden="true"></i> Add New Item
                            </a>
                        </li>
                    {% else %}
                        <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                        <li><a class="btn btn-circle" href="{{ path('fos_user_security_login') }}">Sign in</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

{% if app.user and not app.user.location %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
                <div class="alert alert-warning">
                    In order to show your items to other people we need you to fill in
                    <a href="{{ path('user_edit') }}">profile data</a>
                </div>
            </div>
        </div>
    </div>
{% endif %}
